<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- VIP Level Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select VIP Level"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/vipLevel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP Level 1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$9.99/month"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vipLevel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP Level 2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$19.99/month"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vipLevel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP Level 3"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$29.99/month"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/vipLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No VIP level selected"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Payment Method Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Payment Method"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/paymentMethodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/visaRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visa"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/mastercardRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MasterCard"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/paypalRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PayPal"
                android:textColor="@color/white" />

        </RadioGroup>

        <!-- Visa and mastercard  -->
        <LinearLayout
            android:id="@+id/paymentDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Details"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/cardNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Card Number"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:inputType="number"
                android:maxLength="16"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/expirationDateEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="MM/YY"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    android:inputType="number"
                    android:maxLength="5"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/cvvEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="CVV"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- PayPal Details   -->
        <LinearLayout
            android:id="@+id/paypalDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PayPal Login"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/paypalEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PayPal Email"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/paypalPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PayPal Password"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:inputType="textPassword"
                android:layout_marginBottom="12dp" />

        </LinearLayout>


        <Button
            android:id="@+id/confirmPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Payment"
            android:textColor="@color/white"
            android:backgroundTint="@color/holo_blue_light"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>